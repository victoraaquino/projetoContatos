<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_contato_layout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:src="@drawable/ic_imagem_perfil"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_nome_contato"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="nome_do_contato"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="334dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_telefone"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txt_telefone_contato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(11) 8534-4983"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_editar"
        android:layout_marginTop="20dp"/>

</LinearLayout>